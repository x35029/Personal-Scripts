<Window x:Class="ConMon.Admin.MonitoredDeviceCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monitored Device Category Selection" Height="97" Width="303" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid Width="285" Height="62">
        <ComboBox Height="23" HorizontalAlignment="Left" Name="CategoryComboBox" VerticalAlignment="Top" Width="282" SelectionChanged="CategoryComboBox_SelectionChanged">
            <ComboBoxItem Content="Wireless" />
            <ComboBoxItem Content="MobileBroadband" />
            <ComboBoxItem Content="Modem" />
        </ComboBox>
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="56,32,0,0" Name="OKButton" VerticalAlignment="Top" Width="75" Click="OKButton_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="157,32,0,0" Name="CancelButton" VerticalAlignment="Top" Width="75" IsCancel="True" Click="CancelButton_Click" />
    </Grid>
</Window>
